<h2>Users</h2>
<hr>

<table class="table table-sm table-bordered table-hover">
  <thead class="thead-light text-center">
    <tr>
      <th class="text-left">Name</th>
      <th>Email</th>
      <th>Sites</th>
      <th>Admin</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr class="text-center">
        <td class="text-left"><%= link_to user.last_name_first, user %></td>
        <td><%= user.email %></td>
        <td><%= number_with_delimiter user.sites.count %></td>
        <td><%= user.admin ? '&#10004;'.html_safe : '' %></td>
        <td><%= link_to "edit", edit_user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
